rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

  match /clinics/{clinicId}/appointments/{appointmentId} {
    allow read, write: if isVetInClinic(clinicId);
  }
    match /clinics/{clinicId} {
      allow read, write: if request.auth != null
    }


  function isVetInClinic(clinicId) {
    return exists(/databases/$(database)/documents/clinics/$(clinicId)) &&
      request.auth != null &&
      request.auth.uid in get(/databases/$(database)/documents/clinics/$(clinicId)).data.members;
  }


    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner() {
      return request.resource.data.vetId == request.auth.uid;
    }

    match /appointments/{appointment} {
      allow read: if isAuthenticated();
      allow create: if isOwner();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /users/{userId} {
      allow read, write: if request.auth != null
    }

  }

}
